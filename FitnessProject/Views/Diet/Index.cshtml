@model IEnumerable<FitnessProject.Models.Diets>
@{
    ViewData["Title"] = "Diet Plans";
    int sn = (ViewBag.CurrentPage - 1) * 10 + 1;
}

<h1>Food Items</h1>

<form method="get" asp-action="Index">
    <div class="form-inline mb-3">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Search by Meal Name" />
        <button type="submit" class="btn btn-primary ml-2">Search</button>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Food Item</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>SN</th>
            <th>Meal Name</th>
            <th>Description</th>
            <th>Calories</th>
            <th>Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var diet in Model)
        {
            <tr>
                <td>@sn</td>
                <td>@diet.MealName</td>
                <td>@diet.Description</td>
                <td>@diet.Calories</td>
                <td>@diet.Type.ToString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@diet.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@diet.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@diet.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
            sn++;
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.SearchString">@i</a>
            </li>
        }
    </ul>
</nav>
