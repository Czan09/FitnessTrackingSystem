@model FitnessProject.Models.Diets

@{
    ViewData["Title"] = "Diet Details";
}

<h1>Diet Details</h1>

<div>
    <h4>Diet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Meal Name</dt>
        <dd class="col-sm-10">@Model.MealName</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Calories</dt>
        <dd class="col-sm-10">@Model.Calories</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type.ToString()</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
