@model FitnessProject.Models.Diets

@{
    ViewData["Title"] = "Delete Diet";
}

<h1>Delete Diet</h1>

<h4>Are you sure you want to delete this diet?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-3">Meal Name</dt>
        <dd class="col-sm-9">@Model.MealName</dd>

        <dt class="col-sm-3">Description</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Calories</dt>
        <dd class="col-sm-9">@Model.Calories</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
