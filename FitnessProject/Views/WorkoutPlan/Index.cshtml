@model IEnumerable<FitnessProject.Models.WorkoutPlan>

@{
    ViewData["Title"] = "Workout Plans";
}

<h1>Workout Plans</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Plan</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Title)</th>
            <th>@Html.DisplayNameFor(model => model.First().Description)</th>
            <th>Trainer</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var plan in Model)
        {
            <tr>
                <td>@plan.Title</td>
                <td>@plan.Description</td>
                <td>@plan.Trainer?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@plan.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@plan.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@plan.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
