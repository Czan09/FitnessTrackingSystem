@model FitnessProject.Models.UserFitnessDetails

@using FitnessProject.Models.enums
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "Create Profile";
}

<h2>Create Profile</h2>

<div class="card mt-3">
    <div class="card-body">
        <form asp-action="CreateProfile" method="post">
            <input asp-for="UserId" class="hidden" type="text" hidden/>
            <div class="mb-3">
                <label asp-for="DOB" class="form-label"></label>
                <input asp-for="DOB" class="form-control" type="date" max="@DateTime.Today.AddYears(-16).ToString("yyyy-MM-dd") />
                <span asp-validation-for="DOB" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Gender" class="form-label"></label>
                <select asp-for="Gender" class="form-select" asp-items="Html.GetEnumSelectList<Gender>()">
                    <option value="">-- Select Gender --</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Height" class="form-label">Height(C.M)</label>
                <input asp-for="Height" class="form-control" step="0.01" min="100"/>
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Weight" class="form-label">Weight(K.G)</label>
                <input asp-for="Weight" class="form-control" step="0.01" min="30" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Goal" class="form-label"></label>
                <select asp-for="Goal" class="form-select" asp-items="Html.GetEnumSelectList<MemberGoals>()">
                    <option value="">-- Select Goal --</option>
                </select>
                <span asp-validation-for="Goal" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ExperienceLevel" class="form-label"></label>
                <select asp-for="ExperienceLevel" class="form-select" asp-items="Html.GetEnumSelectList<ExperinceLevelMember>()">
                    <option value="">-- Select Experience Level --</option>
                </select>
                <span asp-validation-for="ExperienceLevel" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DietType" class="form-label"></label>
                <select asp-for="DietType" class="form-select" asp-items="Html.GetEnumSelectList<DietType>()">
                    <option value="">-- Select Diet Type --</option>
                </select>
                <span asp-validation-for="DietType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FitnessNotes" class="form-label"></label>
                <textarea asp-for="FitnessNotes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="FitnessNotes" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MedicalConditions" class="form-label"></label>
                <textarea asp-for="MedicalConditions" class="form-control" rows="3"></textarea>
                <span asp-validation-for="MedicalConditions" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Profile</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
