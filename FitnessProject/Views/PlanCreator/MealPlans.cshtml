@model IEnumerable<FitnessProject.Models.MealPlan>

<h2>Saved Meal Plans</h2>

@if (!Model.Any())
{
    <p>No meal plans found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Plan Name</th>
                <th>User</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plan in Model)
            {
                <tr>
                    <td>@plan.Name</td>
                    <td>@plan.User?.UserName</td>
                    <td>
                        <a class="btn btn-info" asp-controller="PlanCreator" asp-action="MealPlanDetails" asp-route-id="@plan.Id">View Meals</a>

                        <form asp-controller="PlanCreator" asp-action="DeleteMealPlan" asp-route-id="@plan.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this meal plan?');">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
