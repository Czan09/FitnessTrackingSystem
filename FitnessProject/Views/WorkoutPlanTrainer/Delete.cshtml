@model FitnessProject.Models.WorkoutPlanTrainer

@{
    ViewData["Title"] = "Delete Workout Plan";
}

<h2>Delete Workout Plan</h2>
<hr />

<div>
    <h4>Are you sure you want to delete this workout plan?</h4>
    <dl class="row">
        <dt class="col-sm-2">Plan Name</dt>
        <dd class="col-sm-10">@Model.PlanName</dd>

        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.UserName</dd>

        <dt class="col-sm-2">Trainer</dt>
        <dd class="col-sm-10">@Model.Trainer?.Name</dd>

        <dt class="col-sm-2">Workouts</dt>
        <dd class="col-sm-10">
            @if (Model.WorkoutPlanTrainerWorkouts != null && Model.WorkoutPlanTrainerWorkouts.Any())
            {
                <ul>
                    @foreach (var w in Model.WorkoutPlanTrainerWorkouts)
                    {
                        <li>@w.Workout?.Name</li>
                    }
                </ul>
            }
            else
            {
                <span>No workouts assigned</span>
            }
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
