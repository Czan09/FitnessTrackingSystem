@model IEnumerable<FitnessProject.Models.MealPlanTrainer>

@{
    ViewData["Title"] = "Meal Plans";
}

<h2>Meal Plans</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Plan</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Plan Name</th>
            <th>User</th>
            <th>Trainer</th>
            <th>Meals</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PlanName</td>
                <td>@item.User?.UserName</td>
                <td>@item.Trainer?.Name</td>
                <td>
                    @if (item.MealPlanTrainerMeals != null && item.MealPlanTrainerMeals.Any())
                    {
                        <ul>
                            @foreach (var meal in item.MealPlanTrainerMeals)
                            {
                                <li>@meal.Meal?.MealName</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No Meals</span>
                    }
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a> | *@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
