@model FitnessProject.Models.MealPlanTrainer

@{
    ViewData["Title"] = "Delete Meal Plan";
}

<h2>Delete Meal Plan</h2>

<h4>Are you sure you want to delete this plan?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-2">Plan Name</dt>
    <dd class="col-sm-10">@Model.PlanName</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>

    <dt class="col-sm-2">Trainer</dt>
    <dd class="col-sm-10">@Model.Trainer?.Name</dd>

    <dt class="col-sm-2">Meals</dt>
    <dd class="col-sm-10">
        @if (Model.Meals != null && Model.Meals.Any())
        {
            <ul>
                @foreach (var meal in Model.Meals)
                {
                    <li>@meal.MealName</li>
                }
            </ul>
        }
        else
        {
            <span>No meals assigned</span>
        }
    </dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
