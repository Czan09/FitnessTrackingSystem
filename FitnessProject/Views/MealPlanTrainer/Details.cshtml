@model FitnessProject.Models.MealPlanTrainer

@{
    ViewData["Title"] = "Meal Plan Details";
}

<h2>Meal Plan Details</h2>
<hr />

<dl class="row">
    <dt class="col-sm-2">Plan Name</dt>
    <dd class="col-sm-10">@Model.PlanName</dd>

    <dt class="col-sm-2">User</dt>
    <dd class="col-sm-10">@Model.User?.UserName</dd>

    <dt class="col-sm-2">Trainer</dt>
    <dd class="col-sm-10">@Model.Trainer?.Name</dd>

    <dt class="col-sm-2">Meals</dt>
    <dd class="col-sm-10">
        @if (Model.MealPlanTrainerMeals != null && Model.MealPlanTrainerMeals.Any())
        {
            <ul>
                @foreach (var meal in Model.MealPlanTrainerMeals)
                {
                    <li>@meal.Meal?.MealName</li>
                }
            </ul>
        }
        else
        {
            <span>No Meals</span>
        }
    </dd>
</dl>

<p>
    @* <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a> | *@
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
