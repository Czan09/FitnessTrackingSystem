@model FitnessProject.Models.TrainerDetails

@{
    ViewData["Title"] = "Delete Trainer";
}

<h1>Delete Trainer</h1>

<h3>Are you sure you want to delete this trainer?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Specialty</dt>
        <dd class="col-sm-10">@Model.Specialty</dd>

        <dt class="col-sm-2">Years of Experience</dt>
        <dd class="col-sm-10">@Model.YearsOfExperience</dd>

        <dt class="col-sm-2">Contact</dt>
        <dd class="col-sm-10">@Model.Contact</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
