@model FitnessProject.ViewModels.RegisterViewModel

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100vh;
        height: 100%;
        font-family: Arial, sans-serif;
    }

    .register-container {
        display: flex;
        height: 83vh; /* Full screen height */
        width: 150vh;
    }

    /* Left image fills exactly half the screen */
    .register-left {
        flex: 1;
        background-color: #000;
    }

        .register-left img {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Prevent distortion */
        }

    /* Right half with background stripes */
    .register-right {
        flex: 1;
        background: repeating-linear-gradient( 135deg, #2b2b2b, #2b2b2b 20px, #333333 20px, #333333 40px );
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 150px;
    }

    /* Card styling */
    .register-card {
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        color:black;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.5);
    }

        .register-card h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }

    .btn-primary {
        background: linear-gradient(to right, #000, #222);
        border: none;
        padding: 10px;
        width: 100%;
    }
</style>

<div class="register-container">
    <!-- Left side: Image -->
    <div class="register-left">
        <img src="@Url.Content("~/gallery/customimages/header.png")" alt="Header Image">
    </div>

    <!-- Right side: Form -->
    <div class="register-right">
        <div class="register-card">
            <h2>SIGN UP</h2>

            <form asp-action="Register" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">SIGN UP</button>

                <p class="mt-3 text-center">
                    Already have an account? <a asp-controller="Account" asp-action="Login" style="color: #1E90FF;">Log In</a>
                </p>
            </form>
        </div>
    </div>
</div>

<!-- Email Verification Modal -->
@if (TempData["ShowEmailVerificationModal"] != null)
{
    <div class="modal fade show" id="verifyEmailModal" tabindex="-1" style="display:block;" aria-modal="true" role="dialog">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Email Verification Required</h5>
                </div>
                <div class="modal-body">
                    <p>Please check your email to verify your account. You must confirm your email before logging in.</p>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const modal = new bootstrap.Modal(document.getElementById('verifyEmailModal'), {
                backdrop: 'static',
                keyboard: false
            });
            modal.show();
            localStorage.setItem('showVerificationModal', 'true');
        });
    </script>
}

@if (TempData["ClearVerificationModal"] != null)
{
    <script>localStorage.removeItem('showVerificationModal');</script>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
