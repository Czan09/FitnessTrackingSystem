@model FitnessProject.ViewModels.LoginViewModel

<style>
    html, body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
        font-family: Arial, sans-serif;
        border-radius:10px;
    }

    .login-container {
        display: flex;
        height: 83vh; /* Same as register */
        width: 150vh;
        margin-left:61px;
        
    }

    /* Left image */
    .login-left {
        flex: 1;
        background-color: #000;
    }

        .login-left img {
            width: 100%;
            height: 100%;
            object-fit: contain; /* Prevent distortion */
        }

    /* Right side with stripes */
    .login-right {
        flex: 1;
        background: repeating-linear-gradient(135deg, #2b2b2b, #2b2b2b 20px, #333333 20px, #333333 40px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 150px;
    }

    /* Login card with animation */
    .login-card {
        background-color: white;
        padding: 40px;
        border-radius: 10px;
        width: 100%;
        max-width: 400px;
        color: black;
        box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.5);

        /* Animation */
        opacity: 0;
        transform: translateY(50px);
        animation: fadeInUp 0.8s ease-out forwards;
        animation-delay: 0.3s;
    }

        .login-card h2 {
            text-align: center;
            margin-bottom: 30px;
            font-weight: bold;
        }

    /* Fade-in slide-up keyframes */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(50px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-primary {
        background: linear-gradient(to right, #000, #222);
        border: none;
        padding: 10px;
        width: 100%;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(to right, #111, #444);
            transform: scale(1.05);
        }

    /* Optional hover effect on card */
    .login-card:hover {
        transform: scale(1.02);
        transition: transform 0.3s ease;
    }
</style>


<div class="login-container">
    <!-- Left side: Image -->
    <div class="login-left">
        <img src="@Url.Content("~/gallery/customimages/header.png")" alt="Header Image">
    </div>

    <!-- Right side: Form -->
    <div class="login-right">
        <div class="login-card">
            <h2>LOG IN</h2>

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label"></label>
                </div>

                <button type="submit" class="btn btn-primary">LOG IN</button>

                <p class="mt-3 text-center">
                    Forgot Password? <a asp-controller="Account" asp-action="SendOtp" style="color:#1E90FF;">Change Password</a>
                </p>
                <p class="mt-3 text-center">
                    Don’t have an account? <a asp-controller="Account" asp-action="Register" style="color:#1E90FF;">Sign Up</a>
                </p>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
